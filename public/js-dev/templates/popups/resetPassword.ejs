<div class="modal-dialog">
    <div class="modal-content">
        <form id="resetpassword" action="login" method="POST" role="form">
            <input type="hidden" name="_csrf" value="<%- CSRFToken %>"/>
            <input type="hidden" name="hash" value="<%- hash %>"/>
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title"><%- Translator.translate("resetPassword.resetPassword") %></h4>
            </div>
            <div class="modal-body">
                <div class="panel panel-default">
                    <div class="panel-heading"><%- Translator.translate("resetPassword.setNewPassword") %></div>
                    <div class="panel-body">
                        <div class="input-group form-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                            <input type="password" id="resetpasswordpassword" name="password" class="form-control required" placeholder="<%- Translator.translate("resetPassword.password") %>" data-pattern=".{6,}"
                                   data-toggle="popover" data-content="<%- Translator.translate("resetPassword.password.descripton") %>" data-trigger="focus" data-container=".dkp_modal"/>
                        </div>
                        <div class="input-group form-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                            <input type="password" id="resetpasswordpassword2" name="password2" class="form-control required" placeholder="<%- Translator.translate("resetPassword.passwortRepeat") %>" data-pattern=".{6,}"
                                   data-toggle="popover" data-content="<%- Translator.translate("resetPassword.passwortRepeat.description") %>" data-trigger="focus" data-container=".dkp_modal"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="submit" class="btn btn-primary btn-lg btn-block" id="resetpasswordsubmit" value="<%- Translator.translate("resetPassword.submit") %>"/>
            </div>
        </form>
    </div>
</div>