<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <div class="pull-right cornerbutton">
                <select class="items" data-width="auto" data-live-search="<%- _.size(items) > 5 ? 'true' : 'false' %>">
                    <option value=""><%- Translator.translate("items.addNew") %></option>
                    <% if (_.size(items) > 0) { %>
                        <option data-divider="true"></option>
                    <% } %>
                    <% _.each(items, function (item) { %>
                    <option class="item" value="<%- item._id %>"><%- item.name %></option>
                    <% }); %>
                </select>
            </div>
            <h4 class="modal-title"><%- Translator.translate("items.items") %></h4>
        </div>
        <div class="modal-body">
            <div id="itemdata"></div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>