<div class="modal-dialog">
    <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title"><%- Translator.translate("settings.settings") %></h4>
            </div>
            <div class="modal-body">
                <div class="panel panel-default">
                    <form id="emailform" role="form">
                        <input type='text' style='display: none'>
                        <input type='password' style='display: none'>
                        <div class="panel-heading"><%- Translator.translate("settings.changeEmail") %></div>
                        <div class="panel-body">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><%- Translator.translate("settings.currentEmail") %></span>
                                    <span class="form-control"><%- currentEmail %></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
                                    <input type="email" id="emailemail" name="email" class="form-control required" placeholder="<%- Translator.translate("settings.newEmail") %>"/>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                                    <input type="password" id="emailoldpassword" name="oldpassword" class="form-control required" placeholder="<%- Translator.translate("settings.currentPassword") %>"/>
                                </div>
                            </div>
                        </div>
                        <div class="panel-footer">
                            <input type="submit" value="<%- Translator.translate("settings.save") %>" class="btn btn-primary pull-right"/>
                            <div class="clearfix"></div>
                        </div>
                    </form>
                </div>
                <div class="panel panel-default">
                    <form id="passwordform" role="form">
                        <div class="panel-heading"><%- Translator.translate("settings.changePassword") %></div>
                        <div class="panel-body">
                            <div class="input-group form-group">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                                <input type="password" id="passwordpassword" name="password" class="form-control required" placeholder="<%- Translator.translate("settings.newPassword") %>" data-pattern=".{6,}"
                                       data-toggle="popover" data-content="<%- Translator.translate("settings.newPassword.description") %>" data-trigger="focus" data-container=".dkp_modal"/>
                            </div>
                            <div class="input-group form-group">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                                <input type="password" id="passwordpassword2" name="password2" class="form-control required" placeholder="<%- Translator.translate("settings.newPasswordRepeat") %>" data-pattern=".{6,}" data-sameas="#passwordpassword"
                                       data-toggle="popover" data-content="<%- Translator.translate("settings.newPasswordRepeat.description") %>" data-trigger="focus" data-container=".dkp_modal"/>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                                    <input type="password" id="passwordoldpassword" name="oldpassword" class="form-control required" placeholder="<%- Translator.translate("settings.currentPassword") %>"/>
                                </div>
                            </div>
                        </div>
                        <div class="panel-footer">
                            <input type="submit" value="<%- Translator.translate("settings.save") %>" class="btn btn-primary pull-right"/>
                            <div class="clearfix"></div>
                        </div>
                    </form>
                </div>
            </div>
        </form>
    </div>
</div>